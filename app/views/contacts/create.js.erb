<% if @contact.errors.any? %>
  $('.message-us').append("<%= j ( render partial: 'layouts/alerts/alert', locals: {content: 'Моля, попълнете всички полета правилно.'} )%>");
<% else %>
  $('.message-us').append("<%= j ( render partial: 'layouts/alerts/alert', locals: {content: 'Съобщението е изпратено.'} )%>");
<% end %>