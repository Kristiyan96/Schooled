h1 
  | Marks for
  = " #{@course.subject.name}"


ul.nav.nav-tabs
  li.active
    a data-toggle="tab" href="#first_term" = (t 'button.term_1')
  li
    a data-toggle="tab" href="#first_term_final" = (t 'button.term_1_final')
  li
    a data-toggle="tab" href="#second_term" = (t 'button.term_2')
  li
    a data-toggle="tab" href="#second_term_final" = (t 'button.term_2_final')
  li
    a data-toggle="tab" href="#final" = (t 'button.final')

.tab-content
  #first_term.tab-pane.active.fade.in
    = render 'marks_table', purpose: "first_term"
  #first_term_final.tab-pane.fade
    = render 'marks_table', purpose: "first_term_final"
  #second_term.tab-pane.fade
    = render 'marks_table', purpose: "second_term"
  #second_term_final.tab-pane.fade
    = render 'marks_table', purpose: "second_term_final"
  #final.tab-pane.fade
    = render 'marks_table', purpose: "final"