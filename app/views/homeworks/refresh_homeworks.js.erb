// Remove modal input values
$('#add-homework-modal .form-group input').val("");

// Close modal
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();
$('.modal').modal('hide');

// Refresh homeworks in group/homeworks
$("#future").html("<%= escape_javascript ( render partial: 'homeworks/homework_row', collection: @homeworks_future, as: :homework ) %>");
$("#past").html("<%= escape_javascript ( render partial: 'homeworks/homework_row', collection: @homeworks_past, as: :homework ) %>");

// Refresh homeworks in schedule/show
$('#homework .homework-row').remove();
$("#homework").prepend("<%= escape_javascript ( render partial: 'homeworks/homework_row', collection: @homeworks, as: :homework ) %>");
