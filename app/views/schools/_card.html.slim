.card.card-profile
  .card-avatar
    = image_tag('school', class: "img")
  .card-body
    h6.card-category.text-gray = @school.address
    h4.card-title = school_name(@school)
  .row
    - if user_signed_in?
      .col
        a.btn href="mailto:#{@school.email}" data-toggle="tooltip" data-placement="top" title="#{@school.email}"
          i.material-icons email 
          | Имейл
      - if @school.contact_number
        .col
          a.btn href="tel:#{@school.contact_number}" data-toggle="tooltip" data-placement="top" title="#{@school.contact_number}"
            i.material-icons phone
            | Позвъни    
    - policy(@school).edit?
      .col
        = link_to edit_school_path(@school), class: "btn" do
          i.material-icons settings
          | Настройки