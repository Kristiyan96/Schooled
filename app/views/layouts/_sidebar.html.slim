.sidebar data-background-color="white" data-color="purple"
  .logo
    a.simple-text.logo-normal href="" 
      | Schooled
  .sidebar-wrapper
    ul.nav
      .d-md-none
        = render 'components/user/navbar'
      = render 'components/user/sidebar'
      = render 'components/parent/sidebar/sidebar'
      - if user_signed_in? && current_user.assignments.any?
        li.nav-item
          a.nav-link
            b 
              = current_user.assignments.order(:created_at).role.name
        = render partial: "components/#{current_user.roles.first.name.downcase}/sidebar/sidebar"
        