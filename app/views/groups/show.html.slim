.card
  .card-header.card-header-default.card-header-icon
    b.card-icon Начало
    b.card-icon = group_name(@group)

  .card-body
    ul.nav.nav-pills.justify-content-end
      li.nav-item 
        = link_to 'Начало', school_group_path(@school,@group), class: 'nav-link active'
      li.nav-item 
        = link_to 'Оценки', school_group_marks_path(@school,@group), class: 'nav-link'
      li.nav-item 
        = link_to 'Отсъствия', school_group_absences_path(@school,@group, school_year_id: current_year(@school)), class: 'nav-link'
      li.nav-item 
        = link_to 'Домашни', school_group_path(@school,@group), class: 'nav-link'
      li.nav-item 
        = link_to 'Ученици', profiles_path(school_id: @school, group_id: @group), class: 'nav-link'
      li.nav-item 
        = link_to 'Настройки', edit_school_group_path(@school, @group), class: 'nav-link'



.tab-content.tab-space
  #group-main.tab-pane.active
    .row

  #group-courses.tab-pane
    .row
      = render partial: 'courses/course_card', collection: @group.courses, as: :course

  #group-schedule.tab-pane
    

  #group-manage.tab-pane
    .row
      = link_to school_group_courses_path(@school, @group), class: "col-md-4" do
          .card.card-stats
            .card-header.card-header-danger.card-header-icon
              .card-icon
                i.material-icons list_alt
              p.card-category Add & remove courses
              h3.card-title 
                | Manage courses

      = link_to profiles_path(school_id: @school, group_id: @group), class: "col-md-4" do
          .card.card-stats
            .card-header.card-header-success.card-header-icon
              .card-icon
                i.material-icons group
              p.card-category Add students & parents
              h3.card-title 
                | Manage students

      = link_to edit_school_group_path(@school, @group), class: "col-md-4" do
          .card.card-stats
            .card-header.card-header-warning.card-header-icon
              .card-icon
                i.material-icons edit
              p.card-category Group Settings
              h3.card-title 
                | Edit group


